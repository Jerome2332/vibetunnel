{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ES2020", "dom", "dom.iterable"],
    "outDir": "./public",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./public/tsconfig.client.tsbuildinfo",
    "jsx": "react-jsx"
  },
  "include": [
    "src/client/**/*",
    "src/shared/**/*",
    "src/types/**/*",
    "src/test/utils/react-test-utils.tsx",
    "src/test/utils/test-factories.ts",
    "src/test/types/**/*",
    "src/test/vitest.d.ts",
    "src/test/setup.ts",
    "src/test/fixtures/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/cli.ts",
    "src/client/sw.ts"
  ]
}
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ES2020",
    "lib": ["ES2020", "dom", "dom.iterable"],
    "outDir": "./public",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./public/tsconfig.react.tsbuildinfo"
  },
  "include": [
    "src/client/**/*.tsx",
    "src/client/**/*.ts",
    "src/shared/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/cli.ts",
    "src/client/sw.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}